@page
@model RazorPagesWebAppTest.Pages.ProductsModel
@{
}
<h1>Product List</h1>

<form method="get">
    <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search products..." />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Description</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <button @(Model.PageIndex == 1 ? "disabled" : "") asp-route-pageIndex="@(Model.PageIndex - 1)">Previous</button>
    <span>Page @Model.PageIndex of @Model.TotalPages</span>
    <button @(Model.PageIndex == Model.TotalPages ? "disabled" : "") asp-route-pageIndex="@(Model.PageIndex + 1)">Next</button>
</div>
